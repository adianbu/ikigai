<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/rectangle_3"
        android:layout_width="371dp"
        android:layout_height="301dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_page"
        android:elevation="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IKIGAI!"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/pull_up_a_c"
        android:layout_width="343dp"
        android:layout_height="102dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/worksans_semibold"
        android:text="Pull up a chair. Take a taste. Come join us. Life is so endlessly delicious."

        android:gravity="center_horizontal|center_vertical"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/loginButtoncard"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/reddishPink"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="30dp">

        <TextView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/worksans_semibold"
            android:gravity="center"
            android:text="login"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    x<TextView
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/worksans_semibold"
    android:gravity="center"
    android:text="register"
    android:textAlignment="center"
    android:textAllCaps="true"
    android:textColor="#E42021"
    android:textSize="26sp" />

</LinearLayout>